{
    "compilerOptions": {
        "outDir": "./dist",
        "module": "commonjs",
        "target": "es2019",
        "esModuleInterop": true,
        "allowJs": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "paths": {
            "@src/*": ["./src/*"],
            "@main/*": ["./src/main/*"],
            "@config/*": ["./src/main/config/*"],
            "@presentation/*": ["./src/presentation/*"],
            "@infra/*": ["./src/infra/*"],
            "@data/*": ["./src/data/*"],
            "@domain/*": ["./src/domain/*"],
            "@controllers/*": ["./src/presentation/controllers/*"],
        }
    },
    "include": ["src", "tests"],
    "exclude": ["**/node_modules", "**/.*/"]
  }